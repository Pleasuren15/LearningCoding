@model AdminViewModel

@{
    ViewData["Title"] = "Admin";
}

<div class="container-fluid bg-index">
    <div class="bg-tans">
        <partial name="_NavbarPartial">
            <div class="container">
                <div class="home-intro">
                    <h2 class="text-light">
                        MANAGE YOUR DATA.
                    </h2>
                </div>
            </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <h2 class="header-h2 col-8">ADMINISTRATION</h2>
        <a class="text-danger col-4 text-right" asp-controller="Account" asp-action="Logout">Logout</a>
    </div>

    <div class="admin-count">
        <div class="admin-count-text">
            <p>Admins</p>
            <h3>@Model._users.Count()</h3>
        </div>
        <div class="admin-count-text">
            <p><a>Books</a></p>
            <h3>@Model._books.Count()</h3>
        </div>
        <div class="admin-count-text">
            <p>Feedbacks</p>
            <h3>@Model._feedbacks.Count()</h3>
        </div>
        <div class="admin-count-text">
            <p>Languages</p>
            <h3>@Model._programmingLanguages.Count()</h3>
        </div>
    </div>

    <div class="btn-group mt-2 ">
        <a class="btn btn-danger" asp-controller="Book" asp-action="Add">Add Book</a>
        <a class="btn btn-success" href="#">Add Language</a>
    </div>

    <table class="table table-light mt-2">
        <caption>list of feedbacks</caption>
        <thead>
            <tr>
                <th>Sender</th>
                <th>Manage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model._feedbacks)
            {
                <tr>
                    <td>@f.FeedbackEmail</td>
                    <td>
                        <a href="#" class="text-success">View</a> |
                        <a href="#" class="text-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div paging-info="@Model._pagingInfoModel"></div>
